generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//rewrite
model Photo {
  id    Int      @id @default(autoincrement()) 
  name  String? 
  url String?
  character  CharacterCoords []
  highscore  Highscore []
}

model CharacterCoords {
  id    Int      @id @default(autoincrement())
  character  String
  //these are always based on 950X and 640Y pixels and the adjusted versions in the code are adjusted to that
  xCoord  Int
  yCoord  Int
  photo    Photo  @relation(fields: [photoId], references: [id])
  photoId  Int
}

model Highscore {
  id    Int      @id @default(autoincrement())
  name  String   @db.VarChar(255)
  username  String?   @unique
  score  Int @db.Integer //store it in seconds (calculate by subtracting two current times)
  //track which photo the highscore is for
  photo    Photo  @relation(fields: [photoId], references: [id])
  photoId  Int
}


